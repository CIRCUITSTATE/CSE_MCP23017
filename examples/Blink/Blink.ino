#include <CSE_MCP23017.h>

//==============================================================================//

#define   MCP23017_ADDRESS    0x20  // 0b01000111
#define   LED_PIN             6

//==============================================================================//

CSE_MCP23017 ioExpander (LED_PIN, MCP23017_ADDRESS);

//==============================================================================//

void setup() {
  Serial.begin (115200);

  ioExpander.begin(); // Initialize MCP23017
  ioExpander.pinMode (LED_PIN, OUTPUT); // Set the LED pin as an output
}

//==============================================================================//

void loop() {
  ioExpander.digitalWrite (LED_PIN, HIGH);
  delay (500);
  ioExpander.digitalWrite (LED_PIN, LOW);
  delay (500);
}

